<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Dummy Address"
            android:textSize="15dp"
            android:textColor="#808080"
            android:id="@+id/info_address"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Dummy Phone Number"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/info_phone_number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Price Level"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Dummy Price Level"
            android:textSize="15dp"
            android:textColor="#808080"
            android:id="@+id/info_price_level"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"/>
        
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:id="@+id/info_rating"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Google Page"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Dummy Google Page"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/info_google_page"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#808080"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Dummy Website"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/info_website"/>

    </LinearLayout>

</LinearLayout>